<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/WritersbfTheme">

    <!--a toolbar to open/close action-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--The backdrop view-->
    <com.pedromassango.ibackdrop.Backdrop
        android:id="@+id/backdrop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:closeIcon="@drawable/ic_drop_close"
        app:openIcon="@drawable/ic_drop_open">

        <!--your back view-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <!--your foldable view (front view)-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/margen_chico"
                android:paddingBottom="@dimen/margen_chico"
                android:text="@string/texto_muestra_1" />

            <include
                android:id="@+id/layout_ads_top"
                layout="@layout/ads_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_titulo"
                android:layout_marginTop="@dimen/margen_chico" />

            <!--    espacio para Lista y mapa de GoogleMaps -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_listables"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/coordinatorLayout_appBar"
                android:layout_below="@id/layout_ads_top"
                android:layout_marginTop="@dimen/margen_chico" />

            <RelativeLayout
                android:id="@+id/relativeLayout_eternalProgressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/coordinatorLayout_appBar"
                android:layout_below="@id/layout_ads_top">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminate="true" />
            </RelativeLayout>

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/coordinatorLayout_appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:elevation="@dimen/elevation_card">

                <!--<com.google.android.material.bottomappbar.BottomAppBar-->
                <!--android:id="@+id/bottomAppBar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="bottom"-->
                <!--app:navigationIcon="@drawable/baseline_menu_white_24" />-->

                <!--<com.google.android.material.floatingactionbutton.FloatingActionButton-->
                <!--android:id="@+id/floatingButton_new"-->
                <!--android:layout_width="@dimen/size_fab_normal"-->
                <!--android:layout_height="@dimen/size_fab_normal"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--app:layout_anchor="@id/bottomAppBar" />-->
            </android.support.design.widget.CoordinatorLayout>
        </RelativeLayout>

    </com.pedromassango.ibackdrop.Backdrop>

    <FrameLayout
        android:id="@+id/frameLayout_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
