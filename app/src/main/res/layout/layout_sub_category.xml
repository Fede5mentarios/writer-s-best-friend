<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_nombre_subcategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margen_lateral"
            android:layout_marginTop="@dimen/margen_chico"
            android:layout_marginBottom="@dimen/margen_chico"
            android:layout_toStartOf="@+id/imageButton_edit_subcategoria"
            android:text="@string/texto_muestra_1"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@id/imageButton_edit_subcategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageButton_delete_subcategoria"
            android:minWidth="@dimen/size_clickeable_chico"
            android:minHeight="@dimen/size_clickeable_chico"
            app:srcCompat="@drawable/baseline_edit_white_24" />

        <ImageButton
            android:id="@id/imageButton_delete_subcategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:minWidth="@dimen/size_clickeable_chico"
            android:minHeight="@dimen/size_clickeable_chico"
            app:srcCompat="@drawable/baseline_delete_outline_white_24" />

    </RelativeLayout>

    <android.arch.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_dataFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout_titulo" />
</RelativeLayout>
